<UserControl x:Class="Swegrant.Server.UserControls.QuestionnaireControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Swegrant.Server.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Button x:Name="btnNavigate" Content="Navigate Questionnaire" Click="btnNavigate_Click" />
        <!--<Button x:Name="btnRefresh" Content="Refresh" Click="btnRefresh_Click" />-->
        
        <DataGrid x:Name="dgInfo" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}"/>
                <DataGridTextColumn Header="Question" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Answer" Binding="{Binding Value}"/>
                
               
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
