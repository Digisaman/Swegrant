<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Swegrant.ViewModels"
             x:Class="Swegrant.Views.MainPage"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:MainViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Swegrant!" FontSize="Title"
                VerticalOptions="Start"
                HorizontalOptions="CenterAndExpand" 
                   
                   TextColor="Black"/>

            <Label Text="Please Choose Your Language" FontSize="Large"
                VerticalOptions="Start"
                HorizontalOptions="CenterAndExpand"
                   TextColor="Black"/>


            <Button x:Name="btnPersian" Text="فارسی" Clicked="btnPersian_Clicked" />
            <!--<Button x:Name="btnEnglish" Text="English" Clicked="btnEnglish_Clicked" />-->
            <Button x:Name="btnSweden" Text="Svenska" Clicked="btnSweden_Clicked" />
        </StackLayout>


    </ContentPage.Content>
</ContentPage>