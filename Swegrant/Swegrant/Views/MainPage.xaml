<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Swegrant.ViewModels"
             xmlns:resx="clr-namespace:Swegrant.Resources"
             x:Class="Swegrant.Views.MainPage"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:MainViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label 
                
                Text="{x:Static resx:AppResources.Welcome}"
                FontSize="Title"
                VerticalOptions="Start"
                HorizontalOptions="CenterAndExpand" 
                TextColor="Black"/>

            <Label Text="{x:Static resx:AppResources.ChooseLanguage}" FontSize="Large"
                VerticalOptions="Start"
                HorizontalOptions="CenterAndExpand"
                   TextColor="Black"/>


            <Button x:Name="btnPersian" Text="{x:Static resx:AppResources.Farsi}" Clicked="btnPersian_Clicked"
                    ImageSource="{Binding FAFlag}"/>
            <!--<Button x:Name="btnEnglish" Text="English" Clicked="btnEnglish_Clicked" />-->
            <Button x:Name="btnSweden" Text="{x:Static resx:AppResources.Svenska}" Clicked="btnSweden_Clicked"
                      ImageSource="{Binding SVFlag}"/>
        </StackLayout>


    </ContentPage.Content>
</ContentPage>