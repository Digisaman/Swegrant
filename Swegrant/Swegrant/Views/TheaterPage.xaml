<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:model="clr-namespace:Swegrant.Models"
             xmlns:resx="clr-namespace:Swegrant.Resources"
             xmlns:viewmodel="clr-namespace:Swegrant.ViewModels" 
             xmlns:extensions="http://xamarin.com/schemas/2020/toolkit"
             xmlns:converters="clr-namespace:Swegrant.Converters"
             x:Class="Swegrant.Views.TheaterPage"
             Title="{Binding Title}"
             mc:Ignorable="d"
             BackgroundColor="{StaticResource PrimaryBackColor}">
    <ContentPage.BindingContext>
        <viewmodel:TheaterViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <converters:BackgroundColorVisibilityConverter 
               x:Key="MyBackgroundColorVisibilityConverter"/>
    </ContentPage.Resources>
    <!--<ContentPage.ToolbarItems>
        <ToolbarItem x:Name="ToolbarDone" Text="Done" />
    </ContentPage.ToolbarItems>-->
    <Grid ColumnSpacing="0" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <CollectionView
            Grid.Row="0"
            Grid.ColumnSpan="2"
            ItemsSource="{Binding Messages}"
            IsVisible="{Binding IsSubtitleVisible}"
            Rotation="180">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        Padding="10"
                        ColumnSpacing="0"
                        Rotation="180">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Frame
                            VerticalOptions="CenterAndExpand"
                            HorizontalOptions="CenterAndExpand"
                            Grid.Column="1"
                            Margin="5,0,20,0"
                            Padding="5"
                            BackgroundColor="Black"
                            CornerRadius="20"
                            Visual="Material">
                            <Label
                                Margin="10,5"
                                Text="{Binding Message}"
                                HorizontalTextAlignment="Center"
                                VerticalTextAlignment="End"
                                TextColor="White"
                                FontSize="36"/>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid HorizontalOptions="CenterAndExpand" 
              Grid.Row="1" Grid.ColumnSpan="2"
              IsVisible="{Binding IsImageCharchterVisible}">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0"
                   Text="{x:Static resx:AppResources.SelectCharachter}"
                   IsVisible="{Binding IsImageCharchterVisible}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="{StaticResource PrimaryTextColor}"
               FontAttributes="Bold"
               FontSize="Medium" />
            <StackLayout Orientation="Horizontal"
                         Grid.Row="0" Grid.Column="1">

                <ImageButton BackgroundColor="{Binding IsLeylaSelected, Converter={StaticResource MyBackgroundColorVisibilityConverter}}"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                        Aspect="AspectFit"
                        Command="{Binding SelectLeyla}"
                        Source="{Binding LeylaImage}"/>
                
                
                <ImageButton 
                        BackgroundColor="{Binding IsTaraSelected, Converter={StaticResource MyBackgroundColorVisibilityConverter}}"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                        Aspect="AspectFit"
                        Command="{Binding SelectTara}"
                        Source="{Binding TaraImage}"/>

                <ImageButton 
                        BackgroundColor="{Binding IsSinaSelected, Converter={StaticResource MyBackgroundColorVisibilityConverter}}"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                        Aspect="AspectFit"
                        Command="{Binding SelectSina}"
                        Source="{Binding SinaImage}"/>


            </StackLayout>
        </Grid>
        
        <Grid HorizontalOptions="CenterAndExpand" 
              Grid.Row="2" Grid.ColumnSpan="2"
              IsVisible="{Binding IsTextCharchterVisible}">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0"
                   Text="{x:Static resx:AppResources.SelectCharachter}"
                   IsVisible="{Binding IsTextCharchterVisible}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="{StaticResource PrimaryTextColor}"
               FontAttributes="Bold"
               FontSize="Medium" />
            <StackLayout Orientation="Horizontal"
                         Grid.Row="0" Grid.Column="1">

                <RadioButton BackgroundColor="{StaticResource Primary}" 
                         HorizontalOptions="FillAndExpand"
                         FontSize="Large" 
                         FontAttributes="Bold"
                         TextColor="{StaticResource SecondaryTextColor}" 
                         IsChecked="{Binding IsLeylaSelected}" 
                         Content="{x:Static resx:AppResources.Leyla}"/>
                <RadioButton BackgroundColor="{StaticResource Primary}" 
                             HorizontalOptions="FillAndExpand"
                         FontSize="Large" 
                         FontAttributes="Bold" 
                         TextColor="{StaticResource SecondaryTextColor}" 
                         IsChecked="{Binding IsTaraSelected}" 
                         Content="{x:Static resx:AppResources.Tara}"/>
                <RadioButton BackgroundColor="{StaticResource Primary}" 
                             HorizontalOptions="FillAndExpand"
                         FontSize="Large" 
                         FontAttributes="Bold" 
                         TextColor="{StaticResource SecondaryTextColor}" 
                         IsChecked="{Binding IsSinaSelected}" 
                         Content="{x:Static resx:AppResources.Sina}"/>
                

            </StackLayout>
        </Grid>
     

        <ActivityIndicator x:Name="activityIndicator"
            Grid.ColumnSpan="2"
            Grid.RowSpan="3"
            d:IsRunning="True"
            d:IsVisible="True"
            Color="{StaticResource SecondaryColor}"
            HorizontalOptions="CenterAndExpand"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="CenterAndExpand" />
    </Grid>

</ContentPage>