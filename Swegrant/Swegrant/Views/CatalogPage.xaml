<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Swegrant.ViewModels"
             xmlns:resx="clr-namespace:Swegrant.Resources"
             x:Class="Swegrant.Views.CatalogPage"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:CatalogViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout 
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand">
            <ProgressBar x:Name="progressBar"  HorizontalOptions="FillAndExpand" />
            <WebView x:Name="webBrowser"
                     HeightRequest="1000"
                     WidthRequest="1000"  
                     VerticalOptions= "FillAndExpand" 
                     Navigated="webBrowser_Navigated"
                     Navigating="webBrowser_Navigating"/>
            <Button x:Name="btnPrevious" Text="{x:Static resx:AppResources.Previous}" Clicked="btnPrevious_Clicked" HorizontalOptions="FillAndExpand"/>
            <!--<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                
                <Button x:Name="btnNext" Text="{x:Static resx:AppResources.Next}" Clicked="btnNext_Clicked" HorizontalOptions="FillAndExpand"/>
            </StackLayout>-->

        </StackLayout>
    </ContentPage.Content>
</ContentPage>