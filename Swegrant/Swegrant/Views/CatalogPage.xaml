<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Swegrant.Views.CatalogPage">
    <ContentPage.Content>
        <StackLayout 
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand">
            <ProgressBar x:Name="progressBar"  HorizontalOptions="FillAndExpand" />
            <WebView x:Name="webBrowser"
                     HeightRequest="1000"
                     WidthRequest="1000"  
                     VerticalOptions= "FillAndExpand" 
                     Navigated="webBrowser_Navigated"
                     Navigating="webBrowser_Navigating"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <Button x:Name="btnPrevious" Text="Previous" Clicked="btnPrevious_Clicked" HorizontalOptions="FillAndExpand"/>
                <Button x:Name="btnNext" Text="Next" Clicked="btnNext_Clicked" HorizontalOptions="FillAndExpand"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>